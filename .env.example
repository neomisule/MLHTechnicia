# Required: Choose ONE provider and add your API key
OPENROUTER_API_KEY=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=




# ============================================
# Image Processing Configuration (Optional)
# ============================================

# Maximum image size in MB (default: 5.0)
MAX_IMAGE_SIZE_MB=5.0

# Maximum image dimension (width or height) in pixels (default: 2048)
MAX_IMAGE_DIMENSION=2048

# Automatically resize large images (default: true)
AUTO_RESIZE_IMAGES=true









# ============================================
# Execution Configuration (Optional)
# ============================================

# Maximum recursion depth (default: 5)
MAX_RECURSION_DEPTH=5

# Enable verification by default (default: true)
VERIFY_BY_DEFAULT=true











# ============================================
# Logging Configuration (Optional)
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO

# Log file path (if empty, logs to console only)
# LOG_FILE=logs/roma_vlm.log
